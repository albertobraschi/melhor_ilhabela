  <div id="col2">
    <div id="col2_content" class="clearfix">
      <h6 class="vlist">Menu</h6>
      <ul class="vlist">
        <li><%= link_to "Adicionar usuário", new_admin_user_path %></li>
      </ul>
      <div class="block-busca">
      <% form_tag admin_users_path,:class=>"yform", :method => 'get' do %>
        <label for="termo"><strong>Buscar usuário</strong><br /><%= text_field_tag :search, params[:search] %><%= submit_tag "Ok", :name => nil %></label>
      <% end %>
      </div>
    </div>
  </div>
  <div id="col3">
    <div id="col3_content" class="clearfix">
      <ul>
      <li>
        <% if params[:search] %>
          Busca resultou em: <%= pluralize(@users.count, 'registro')%>
        <% end %>
      </li>
        <li>
          <table class="full">
            <caption>Usuários</caption>
            <tbody>
              <tr>
                <th>Nome do usuário</th>
                <th>Email</th>
                <th>Data de cadastro</th>
                <th class="right">Ações</th>
              </tr>
            <% for user in @users %>
              <tr>
                <td><%=h user.username %></td>
                <td><%=h user.email %></td>
                <td><%=h user.created_at.strftime("%d de %B, %Y") %></td>
                <td class="right"><%= link_to "Editar", edit_admin_user_path(user) %> | <%= link_to "Apagar", admin_user_path(user), :confirm => 'Tem certeza?', :method => :delete %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </li>
      </ul>
    </div>
    <!-- IE Column Clearing -->
    <div id="ie_clearing"> &#160; </div>
  </div>

